# Database Configuration
PG_HOSTNAME=localhost
PG_PORT=5432
PG_DATABASE=athenai
PG_USERNAME=postgres
PG_PASSWORD=your_password_here

# Application Environment
# Options: development | production
# development: Returns detailed error information including SQL errors
# production: Returns only error codes for security
APP_ENV=development

# Server Configuration
PORT=8080
HOST=localhost

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-256-bits
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# LLM API Configuration (Optional - for AI workout generation)
LLM_ENDPOINT=https://api-inference.huggingface.co/models/your_model
API_TOKEN=your_api_token_here

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_secure_admin_password